    <style>
        .language-options {
            display: grid;
            gap: 1rem;
            margin: 2rem 0;
        }
        
        .language-option {
            display: flex;
            align-items: center;
            padding: 1.5rem;
            border: 2px solid #e5e7eb;
            border-radius: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            background: white;
        }
        
        .language-option:hover {
            border-color: #2563eb;
            background: #f0f9ff;
            transform: translateY(-2px);
        }
        
        .language-option.selected {
            border-color: #2563eb;
            background: #dbeafe;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
        }
        
        .language-flag {
            font-size: 2rem;
            margin-right: 1.5rem;
        }
        
        .language-info {
            flex: 1;
        }
        
        .language-name {
            font-weight: 600;
            color: #374151;
            font-size: 1.1rem;
            margin-bottom: 0.25rem;
        }
        
        .language-native {
            color: #6b7280;
            font-size: 0.9rem;
        }
        
        .language-description {
            color: #6b7280;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }
        
        .selected-badge {
            background: #10b981;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 1rem;
        }
        
        .language-preview {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-top: 2rem;
            border-left: 4px solid #2563eb;
        }
        
        .preview-title {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
